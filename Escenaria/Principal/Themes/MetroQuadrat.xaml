<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:Principal">
    <Style TargetType="{x:Type local:MetroQuadrat}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:MetroQuadrat}">
                    <ControlTemplate.Resources>
                        <Viewbox x:Key="MetroQuadratTemplate">
                            <StackPanel VerticalAlignment="Stretch">
                                <Rectangle Height="150" Width="150" Fill="blue"></Rectangle>
                                <TextBlock Text="NOM CAMBRER" HorizontalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </Viewbox>
                    </ControlTemplate.Resources>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>